{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es6",
        "outDir": "bin",
        "rootDir": "src/",
        "lib": ["es7", "dom"],
        "esModuleInterop": true,
        "sourceMap": true,
        "allowUnreachableCode": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules", "dist"]
}
